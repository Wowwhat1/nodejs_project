<div class="container mt-4">
    <h3>Edit toy</h3>

    <form class="mt-4" method="POST" action="/toys/{{toy._id}}?_method=PUT">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" value="{{toy.name}}" id="name" placeholder="Name" name="name">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control"  id="description" placeholder="Description" name="description">{{toy.description}}</textarea>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="text" class="form-control" value="{{toy.price}}" id="price" placeholder="Price" name="price">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="url" class="form-control" value="{{toy.image}}" id="image" placeholder="Link" name="image">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>